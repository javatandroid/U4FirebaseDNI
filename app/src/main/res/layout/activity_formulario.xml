<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context="com.example.u4firebasedni.FormularioActivity">

    <EditText
        android:id="@+id/etFormNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre completo"/>

    <EditText
        android:id="@+id/etFormDNI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DNI"/>

    <EditText
        android:id="@+id/etFormProfesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ProfesiÃ³n"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">

        <Button
            android:id="@+id/botonInsertar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insertar"
            android:onClick="btnInsertar"/>

        <Button
            android:id="@+id/botonModificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modificar"
            android:onClick="btnModificar"/>

    </LinearLayout>



</LinearLayout>
